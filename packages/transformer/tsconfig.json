{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "../../dist/transformer",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "typeRoots": ["../../types", "../../node_modules/@types"]
  },
  "include": ["./**/*", "../../types/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
